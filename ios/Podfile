# Set platform to 13.0
platform :ios, '13.0'

# CocoaPods analytics sends network stats synchronous priority.
# Disable this for faster builds.
install! 'cocoapods', :deterministic_uuids => false

# This file is usually generated by the 'flutter' command.
# On Windows, we don't have it, but Codemagic (Mac) will have it.
load File.join(File.dirname(File.realpath(__FILE__)), 'Flutter', 'podhelper.rb')

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      # Force same deployment target across ALL pods to avoid compatibility issues
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      
      # Fix for certain plugins that require specific symbols
      config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= ['$(inherited)', 'PERMISSION_CAMERA=1', 'PERMISSION_MICROPHONE=1']
    end
  end
end
